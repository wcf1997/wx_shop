/* pages/goods_detail/index.wxss */
page {
    padding-bottom: 90rpx;
}
.detail_swiper  swiper{
    height: 65vw;
    text-align: center;


}
.detail_swiper  swiper image {
    width: 60%;
}
.goods_price {
    padding: 15rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: var(--themeColor);
}
.goods_name_row {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 10rpx solid #efefef;
}

.goods_name_row .goods_name {
    flex: 5;
    color: #000;
    font-size: 30rpx;
    padding: 0 10rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
 
}
.goods_info_title {
    font-size: 32rpx;
    color: var(--themeColor);
    font-weight: 600;
    padding: 20rpx;
    border-bottom: 10rpx solid #efefef;
}
/* 购物车 */
.btm_tool {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    background-color: #fff;
    height: 90rpx;
    box-shadow: 0 -1px 1px #efefef;
}
.icon-shoucang {
    color: var(--themeColor);
}
.btm_tool .tool_item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 25rpx;
    position: relative;
}
.btm_tool .tool_item button {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;

}
.btm_tool .btn_cart {
    flex: 2;
    background-color: #ffa500;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}
.btm_tool .btn_buy {
    flex: 2;
    background-color: #eb4450;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}